<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-lg-8">
      <h4 class="mb-4 text-center"><i class="fas fa-user-friends"></i>Myフォロー</h4>
        <% if @user == current_user  %>
          <h5><%= @user.name %> さんのフォローしてる人 (<%= @users.count %>人)</h5>
        <% end %>
        <% if @users.exists? %>
        <% @users.each do |user| %>
         <div class="container shadow mb-5 py-3">
        <table class="table">
          <thead>
            <tr class="text-center">
              <th style="width: 20%">image</th>
              <th>name</th>
              <th>フォロー</th>
              <th>フォロワー</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr class="text-center">
              <td> <%= image_tag user.get_image(100,100)%></td>
              <td><%= user.name %></td>
              <td><%= user.followings.count %></td>
              <td><%= user.followers.count %></td>
              <td><%= link_to 'Show', user %></td>
            </tr>
          </tbody>
        </table>
        </div>
        <% end %>
        <% else %>
          <p>ユーザーはいません</p>
        <% end %>
    </div>
  </div>
</div>
<div class="pagination">
 <%= paginate @users %>
</div>