<div class ="container">
  <div class="row">
    <div class="col-12">
    <h4 class="text-center"><i class="fas fa-bell"></i> 通知</h4>
      <%= link_to notification_path(@notifications), method: :delete, data: {confirm: "通知を全て削除します。よろしいですか？"},class: 'btn btn-outline-danger w-25 ' do %>
      <i class="fas fa-trash-alt"></i>通知を削除
      <% end %>
      <% if @notifications.exists? %>
      <div class="notification-index">
        <%= render @notifications %>
      </div>
      <% else %>
       <p>通知はありません</p>
      <% end %>
    </div>
  </div>
</div>