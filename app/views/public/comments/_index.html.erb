<% if post.comments.present? %>
  <p>コメント<i class="far fa-comment-alt"></i>　<%= post.comments.count %></p>
  <% post.comments.each do |comment| %>
  <%= comment.comment %>
  <%= comment.created_at.strftime('%Y/%m/%d') %>
    <%= link_to user_path(comment.user),class: "text-dark" do  %>
     <%= comment.user.name %>
     <%= image_tag comment.user.get_image, class: "comment-user-image" %>
    <% end %>
    <% if comment.user == current_user %>
      <div class="comment-delete">
        <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete, remote: true, data: {confirm: "本当に削除しますか？"} %><br>
      </div>
    <% end %>
  <% end %>
<% else %>
  <p>コメントはまだありません</p>
<% end %>
