<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-lg-6 my-4">
      <h4>投稿詳細</h4>
      <div class="container customize-border shadow bg-white mb-5 py-3">
        <p>店舗名：<strong><%= @post.shop_name %></strong></p>
          <%= image_tag @post.get_image(400,300)%>
        <h5><strong><%= @post.title %></strong></h5>
        <p><%= @post.content %></p>
        <table class="table">
          <tr>
            <th>アクセス</th>
            <td><%= @post.shop_place %></td>
          </tr>
          <tr>
            <th>平均予算</th>
            <td><%= @post.shop_price %>円</td>
          </tr>
          <tr>
            <th>定休日</th>
            <td><%= @post.shop_holiday %></td>
          </tr>
          <tr id="post_<%= @post.id %>"> <!--いいね機能-->
          <th></th>
          <td class="like-btn"><%= render 'public/likes/btn', post: @post %></td>
          </tr>
        </table>

           <% if @post.user == current_user %>
           <%= link_to '編集', edit_post_path, class: 'btn btn-primary mr-3'%>
          <% end %>
      </div>
      <div class="container customize-border shadow">
      <p>コメント<i class="far fa-comment-alt"></i>　<%= @post.comments.count %></p>
        <% @post.comments.each do |comment| %>
        <%= comment.user.name %>さん
        <%= comment.comment %>
         <%= comment.created_at.strftime('%Y/%m/%d') %>
        <% if comment.user == current_user %>
        <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete %><br>
          <% end %>
        <% end %>
        <%= form_with model: [@post, @comment] do |f| %>
        <%= f.text_area :comment, placeholder: "コメントをここに",style:"width:300px; height:150px; resize:none;"  %><br>
        <%= f.submit "送信する",class: 'btn btn-success' %>
          <% end %>
      </div>
  </div>
</div>