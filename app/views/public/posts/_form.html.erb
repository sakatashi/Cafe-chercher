     <div class="container customize-border shadow">
     <%= form_with model: @post, url: posts_path, method: :post do |f|%>

       <%= f.label :image,"画像を選択する" %><br>
       <%= f.file_field :image,accept: 'image/*' %><br>

       <%= f.label :title,"タイトル" %><br>
       <%= f.text_field :title, placeholder: "タイトルを入力" %><br>

       <%= f.label :content,"本文 (#をつけるとタグになります）" %><br>
       <%= f.text_area :content, placeholder: "本文を入力     #タグ" %><br>

       <%= f.label :shop_name,"カフェ名" %><br>
       <%= f.text_field :shop_name, placeholder: "カフェ名を入力" %><br>

       <%= f.label :shop_place,"アクセス" %><br>
       <%= f.text_field :shop_place %><br>

        <%= f.label :shop_holiday,"定休日" %><br>
        <%= f.text_field :shop_holiday %><br>

        <%= f.label :shop_price,"平均予算" %><br>
        <%= f.text_field :shop_price %>円<br>

        <div class="form-group">
          <%= f.label :is_draft,"下書き/投稿" %><br>
        <%= f.select :is_draft, Post.is_drafts.keys.map { |k| [t("enums.post.is_draft.#{k}"),k]}, {}, {class: "custom-select w-50"} %>
        </div><br>
        <%= f.submit '投稿する', class: "btn btn-success w-50" %>
        <% end %>