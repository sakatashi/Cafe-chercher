<div class="post_list">
  <% posts.each do |post| %>
   <% if post.user.status == false %>
     <div class="post">
      <%= link_to post_path(post.id),data: {"turbolinks" => false} do %>
       <%= image_tag post.get_image,class: "image_index"%>
      <% end %>
      <p><strong><%= post.title %></strong></p>
      <p><%= post.shop_name %></p>
      <p><%= post.shop_place %></p>
      <p><i class="far fa-comment-alt"></i><%= link_to " #{post.comments.count} ", post_path(post.id) %></p>
     </div>
   <% end %>
  <% end %>
</div>
<div class="pagination">
  <%= paginate posts %>
</div>