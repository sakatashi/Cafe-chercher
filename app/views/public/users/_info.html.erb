<div class="col-md-4">
  <div class="plofile_image">
    <%= image_tag user.get_image,class:"user_image"%>
    <% if current_user != user %>
      <% if current_user.following?(user) %>
        <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete ,class: 'btn btn-outline-danger'%>
      <% else %>
      <%= link_to "フォローする", user_relationships_path(user.id), method: :post,class: 'btn btn-outline-success'%>
      <% end %>
    <% end %>
  </div>
  <table class="table">
    <tr>
      <th style="width: 40%">名前</th>
        <td><%= user.name %></td>
    </tr>
    <% if user == current_user%>
    <tr>
      <th style="width: 40%">メールアドレス</th>
        <td><%= user.email %></td>
    </tr>
    <% end %>
    <tr>
      <th>自己紹介</th>
        <td><%= user.introduction %></td>
    </tr>
    <tr>
      <th>フォロー</th>
        <td>
        <%= link_to user_followings_path(user) do %>
        <%= user.followings.count %>
        <% end %>
        </td>
    </tr>
    <tr>
       <th>フォロワー</th>
        <td>
        <%= link_to user_followers_path(user) do %>
        <%= user.followers.count %>
        <% end %>
        </td>
    </tr>
  </table>
   <p><%=link_to"いいねした投稿を見る",likes_user_path(user),class:'btn btn-outline-success w-100' %></p>
  <% if user == current_user%>
   <p><%=link_to"下書き投稿を見る",draft_index_path(user),class:'btn btn-outline-info w-100'%></p>
   <%= link_to '編集', edit_user_path, class: 'btn btn-outline-primary w-100'%>
  <% end %>
</div>