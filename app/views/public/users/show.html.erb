<div class="container">
  <h4 class="my-5"><%= @user.name %>のマイページ</h4>
  <div class="row">
    <div class="col-4">
      <%= image_tag @user.get_image(100,100)%>
      <table class="table">
          <tr>
            <th>名前</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th>自己紹介</th>
            <td><%= @user.introduction %></td>
          </tr>
      </table>
      <%= link_to '編集', edit_user_path, class: 'btn btn-outline-primary w-100'%>
    </div>
    <div class="col-8">
      <h5><%= @user.name %>さんの投稿</h5>
      <% if @post.user == current_user %>
      <p>店舗名：<strong><%= @post.shop_name %></strong></p>
        <%= image_tag @post.get_image(400,300)%>
      <h5><strong><%= @post.title %></strong></h5>
      <p><%= @post.content %></p>
       <%= link_to '編集', edit_post_path, class: 'btn btn-primary mr-3'%>
        <% else %>
      <h6>投稿はありません</h6>
        <% end %>
    </div>
  </div>
</div>