<div class="container">
  <div class="row">
    <div class="col-md-auto">
      <h4><%= @user.name %></h4>
      <%= image_tag @user.get_image(100,100) %>
    </div>
    <div class="container">
      <% if @post.user == current_user %>
      <h4><%= @user.name %>さんの投稿</h4>
      <p>店舗名：<strong><%= @post.shop_name %></strong></p>
        <%= image_tag @post.get_image(400,300)%>
      <h5><strong><%= @post.title %></strong></h5>
      <p><%= @post.content %></p>
      <table class="table">
        <tr>
          <th>アクセス</th>
          <td><%= @post.shop_place %></td>
        </tr>
        <tr>
          <th>平均予算</th>
          <td><%= @post.shop_price %>円</td>
        </tr>
        <tr>
          <th>定休日</th>
          <td><%= @post.shop_holiday %></td>
        </tr>
      </table>
         <%= link_to '編集', edit_post_path, class: 'btn btn-primary mr-3'%>
      <% end %>
    </div>
  </div>
</div>