<div class="container">
  <div class="row">
    <div class="col">
      <h4><i class="fas fa-edit"></i>投稿一覧</h4>
      <% @posts.each do |post| %>
        <ul>
          <li>
          <div class="container shadow mb-5 py-3">
            <%= link_to post_path(post.id) do %>
            <%= image_tag post.get_image(250,150)%>
            <% end %>
             <p><strong><%= post.title %></strong></p>
             <p><%= post.shop_name %></p>
             <p><%= post.shop_place %></p>
             <p><i class="far fa-comment-alt"></i> <%=post.comments.count%></p>
              <%= link_to '詳細', admin_user_post_path(post.user, post) %>
              ｜<%= link_to '削除', admin_user_post_path(post.user, post), method: :delete, data: {confirm: "本当に削除しますか？"} %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</div>