<div class="container">
  <div class="row">
    <div class='col-12'>
      <h4 class="my-4"><i class="fas fa-users"></i>ユーザ一覧</h4>
      <table class="table table-hover">
        <thead class="table-area">
          <tr>
          <th>名前</th>
          <th>メールアドレス</th>
          <th>ユーザーステータス</th>
          <th></th>
          <th></th>
          </tr>
        </thead>
        <tbody>
         <% @users.each do |user| %>
          <tr>
            <td>
               <%= user.name %>
            </td>
            <td><%= user.email%></td>
            <td><% if user.status == false %>
                  <p class="text-success font-weight-bold">有効</p>
                <% else %>
                  <p class="text-secondary font-weight-bold">退会</p>
                <% end %>
            </td>
            <td><%= link_to '編集', edit_admin_user_path(user) %></td>
            <td> <%= link_to '詳細', admin_user_path(user), class: "btn btn-block btn-outline-dark" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>






